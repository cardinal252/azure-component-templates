{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "name": {
      "type": "string",
      "metadata": {
        "description": "The Elastic Pool name."
      }
    },    
    "adminUser": {
      "type": "string",
      "metadata": {
        "description": "The SQL Server administrator login"
      }
    },
    "adminPassword": {
      "type": "securestring",
      "metadata": {
        "description": "The SQL Server administrator login password."
      }
    },
    "serverName": {
      "type": "string",
      "metadata": {
        "description": "The SQL Server name."
      }
    },
    "edition": {
      "type": "string",
      "defaultValue": "Standard",
      "allowedValues": [
        "Basic",
        "Standard",
        "Premium"
      ],
      "metadata": {
        "description": "The Elastic Pool edition."
      }
    },
    "sku": {
      "type": "object",
      "defaultValue": {
        "name": "GP_Gen4",
        "tier": "GeneralPurpose",
        "family": "Gen4",
        "capacity": 1
      },
      "metadata": {
        "description": "The Elastic Pool DTU."
      }
    },
    "maxSizeBytes": {
      "type": "int",
      "defaultValue": 268435456000
    },
    "databaseNames": {
      "type": "array",
      "metadata": {
        "description": "The SQL Databases names."
      }
    },    
    "location": {
      "type": "string",
      "defaultValue": "[resourceGroup().location]",
      "metadata": {
        "description": "Location for all resources."
      }
    }
  },
  "variables": {},
  "resources": [
    {
      "apiVersion": "2014-04-01-preview",
      "location": "[parameters('location')]",
      "name": "[parameters('serverName')]",
      "properties": {
        "administratorLogin": "[parameters('adminUser')]",
        "administratorLoginPassword": "[parameters('adminPassword')]",
        "version": "12.0"
      },
      "type": "Microsoft.Sql/servers"
    },
    {
      "type": "Microsoft.Sql/servers/elasticPools",   
      "apiVersion": "2017-10-01-preview",
      "name": "[concat(parameters('serverName'), '/', parameters('name'))]",
      "location": "westeurope",
      "sku": "[parameters('sku')]",
      "kind": "vcore,pool",
      "dependsOn": [
        "[concat('Microsoft.Sql/servers/', parameters('serverName'))]"
      ],        
      "properties": {
        "maxSizeBytes": "[parameters('maxSizeBytes')]",
        "zoneRedundant": false,
        "licenseType": "BasePrice"
      }
    },
    {
      "apiVersion": "2014-04-01-preview",
      "location": "[parameters('location')]",
      "name": "[concat(parameters('serverName'), '/', 'AllowAllWindowsAzureIps')]",
      "dependsOn": [
        "[concat('Microsoft.Sql/servers/', parameters('serverName'))]"
      ],      
      "properties": {
        "endIpAddress": "0.0.0.0",
        "startIpAddress": "0.0.0.0"
      },
      "type": "Microsoft.Sql/servers/firewallrules"
    },
    {
      "type": "Microsoft.Sql/servers/databases",
      "name": "[concat(parameters('serverName'), '/', parameters('databaseNames')[copyIndex()])]",
      "location": "[parameters('location')]",
      "apiVersion": "2014-04-01-preview",
      "dependsOn": [
        "[concat('Microsoft.Sql/servers/', parameters('serverName') ,'/elasticpools/', parameters('name'))]"
      ],
      "properties": {
        "requestedServiceObjectiveName": "ElasticPool",
        "elasticPoolName": "[parameters('name')]"
      },
      "copy": {
        "name": "addDatabasesInElasticPool",
        "count": "[length(parameters('databaseNames'))]"
      }
    }    
  ]
}